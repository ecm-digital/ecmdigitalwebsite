{
  "version": 2,
  "public": true,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "installCommand": "echo 'No install needed'",
  "framework": null,
  "redirects": [
    { "source": "/client-dashboard/(.*)", "destination": "https://panel.ecm-digital.com/$1", "permanent": false },
    { "source": "/panel-klienta/(.*)", "destination": "https://panel.ecm-digital.com/$1", "permanent": false }
  ],
  "rewrites": [
    { "source": "/contact", "destination": "/contact.html" },
    { "source": "/login", "destination": "/login.html" },
    { "source": "/panel", "destination": "/panel.html" },
    { "source": "/projekty", "destination": "/projekty.html" }
  ]
}