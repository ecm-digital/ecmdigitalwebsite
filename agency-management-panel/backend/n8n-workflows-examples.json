{
  "workflows": [
    {
      "name": "New Client Welcome Workflow",
      "description": "Sends welcome email and creates CRM entry for new clients",
      "nodes": [
        {
          "id": "webhook-trigger",
          "type": "n8n-nodes-base.webhook",
          "parameters": {
            "httpMethod": "POST",
            "path": "new-client-workflow",
            "responseMode": "lastNode",
            "options": {}
          },
          "position": [240, 300]
        },
        {
          "id": "email-send",
          "type": "n8n-nodes-base.emailSend",
          "parameters": {
            "toEmail": "={{ $json.data.email }}",
            "subject": "Witaj w ECM Digital! ðŸŽ‰",
            "html": "<h1>Witaj {{ $json.data.contact_person }}!</h1><p>DziÄ™kujemy za rejestracjÄ™ w ECM Digital...</p>",
            "options": {}
          },
          "position": [440, 300]
        },
        {
          "id": "crm-update",
          "type": "n8n-nodes-base.httpRequest",
          "parameters": {
            "method": "POST",
            "url": "https://your-crm-api.com/clients",
            "bodyContentType": "json",
            "bodyParameters": {
              "parameter": [
                {
                  "name": "email",
                  "value": "={{ $json.data.email }}"
                },
                {
                  "name": "name",
                  "value": "={{ $json.data.contact_person }}"
                },
                {
                  "name": "company",
                  "value": "={{ $json.data.company }}"
                }
              ]
            }
          },
          "position": [640, 300]
        }
      ],
      "connections": {
        "Webhook": {
          "main": [
            [
              {
                "node": "email-send",
                "type": "main",
                "index": 0
              }
            ]
          ]
        },
        "Send Email": {
          "main": [
            [
              {
                "node": "crm-update",
                "type": "main",
                "index": 0
              }
            ]
          ]
        }
      }
    },
    {
      "name": "Contact Form Lead Qualification",
      "description": "Qualifies leads from contact form and routes to appropriate team",
      "nodes": [
        {
          "id": "webhook-trigger",
          "type": "n8n-nodes-base.webhook",
          "parameters": {
            "httpMethod": "POST",
            "path": "contact-form-workflow",
            "responseMode": "lastNode",
            "options": {}
          },
          "position": [240, 300]
        },
        {
          "id": "openai-analyze",
          "type": "@n8n/n8n-nodes-langchain.openAi",
          "parameters": {
            "model": "gpt-3.5-turbo",
            "messages": [
              {
                "role": "user",
                "content": "Analyze this contact form message and determine if it's a qualified lead. Rate from 1-10 and explain why: {{ $json.data.message }}"
              }
            ]
          },
          "position": [440, 300]
        },
        {
          "id": "switch-lead-quality",
          "type": "n8n-nodes-base.switch",
          "parameters": {
            "conditions": {
              "boolean": [
                {
                  "value1": "={{ parseInt($json.message.content.match(/\\d+/)[0]) > 7 }}",
                  "operation": "equal",
                  "value2": true
                }
              ]
            }
          },
          "position": [640, 300]
        },
        {
          "id": "sales-notification",
          "type": "n8n-nodes-base.discord",
          "parameters": {
            "webhookUri": "your-discord-webhook-url",
            "text": "ðŸ”¥ HOT LEAD: {{ $json.data.name }} from {{ $json.data.company }} - {{ $json.data.message }}"
          },
          "position": [840, 200]
        },
        {
          "id": "auto-response",
          "type": "n8n-nodes-base.emailSend",
          "parameters": {
            "toEmail": "={{ $json.data.email }}",
            "subject": "DziÄ™kujemy za kontakt - ECM Digital",
            "html": "<p>DziÄ™kujemy za wiadomoÅ›Ä‡. Odpowiemy najszybciej jak to moÅ¼liwe.</p>",
            "options": {}
          },
          "position": [840, 400]
        }
      ],
      "connections": {
        "Webhook": {
          "main": [
            [
              {
                "node": "openai-analyze",
                "type": "main",
                "index": 0
              }
            ]
          ]
        },
        "OpenAI": {
          "main": [
            [
              {
                "node": "switch-lead-quality",
                "type": "main",
                "index": 0
              }
            ]
          ]
        },
        "Switch": {
          "main": [
            [
              {
                "node": "sales-notification",
                "type": "main",
                "index": 0
              }
            ],
            [
              {
                "node": "auto-response",
                "type": "main",
                "index": 1
              }
            ]
          ]
        }
      }
    },
    {
      "name": "Project Setup Automation",
      "description": "Automates project setup when new project is created",
      "nodes": [
        {
          "id": "webhook-trigger",
          "type": "n8n-nodes-base.webhook",
          "parameters": {
            "httpMethod": "POST",
            "path": "new-project-workflow",
            "responseMode": "lastNode",
            "options": {}
          },
          "position": [240, 300]
        },
        {
          "id": "create-github-repo",
          "type": "n8n-nodes-base.github",
          "parameters": {
            "operation": "createRepository",
            "repositoryName": "={{ $json.data.name.toLowerCase().replace(/\\s+/g, '-') }}",
            "repositoryDescription": "={{ $json.data.description }}",
            "private": true
          },
          "position": [440, 300]
        },
        {
          "id": "create-jira-project",
          "type": "n8n-nodes-base.jira",
          "parameters": {
            "operation": "createProject",
            "projectName": "={{ $json.data.name }}",
            "projectKey": "={{ $json.data.name.substring(0, 3).toUpperCase() }}",
            "projectDescription": "={{ $json.data.description }}"
          },
          "position": [640, 300]
        },
        {
          "id": "slack-notification",
          "type": "n8n-nodes-base.slack",
          "parameters": {
            "webhookUri": "your-slack-webhook-url",
            "text": "ðŸš€ New project created: {{ $json.data.name }}\nClient: {{ $json.data.client }}\nRepository: {{ $json.repository.html_url }}\nJira: {{ $json.project.self }}"
          },
          "position": [840, 300]
        }
      ],
      "connections": {
        "Webhook": {
          "main": [
            [
              {
                "node": "create-github-repo",
                "type": "main",
                "index": 0
              }
            ]
          ]
        },
        "GitHub": {
          "main": [
            [
              {
                "node": "create-jira-project",
                "type": "main",
                "index": 0
              }
            ]
          ]
        },
        "Jira": {
          "main": [
            [
              {
                "node": "slack-notification",
                "type": "main",
                "index": 0
              }
            ]
          ]
        }
      }
    }
  ],
  "instructions": {
    "setup": [
      "1. Import these workflows into your n8n instance",
      "2. Update webhook URLs to match your backend domain",
      "3. Configure API credentials for external services (GitHub, Jira, Slack, etc.)",
      "4. Test workflows with sample data",
      "5. Adjust logic and add additional nodes as needed"
    ],
    "customization": [
      "Modify email templates to match your branding",
      "Add your own CRM or project management integrations",
      "Implement custom lead scoring algorithms",
      "Add error handling and fallback notifications",
      "Set up monitoring and alerting for workflow failures"
    ]
  }
}
