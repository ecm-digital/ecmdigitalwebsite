# Supabase Configuration (FREE - https://supabase.com)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Database (Supabase PostgreSQL - included in Supabase)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Redis (Upstash - FREE - https://upstash.com)
REDIS_URL=redis://default:[password]@[endpoint].upstash.io:6379

# n8n Integration (Self-hosted or n8n.cloud)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your-n8n-api-key

# Email (Resend - FREE 3k emails/month - https://resend.com)
RESEND_API_KEY=re_your_api_key

# App Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3002

# AI Assistant (Optional - OpenAI or Anthropic)
# OpenAI (https://platform.openai.com)
OPENAI_API_KEY=sk-your-openai-key

# OR Anthropic Claude (https://console.anthropic.com)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
