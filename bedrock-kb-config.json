{
  "knowledgeBaseName": "ecm-digital-services",
  "description": "Knowledge base for ECM Digital services, FAQ, and company information",
  "roleArn": "arn:aws:iam::049164057970:role/ecm-digital-bedrock-role",
  "knowledgeBaseConfiguration": {
    "type": "VECTOR",
    "vectorKnowledgeBaseConfiguration": {
      "embeddingModelArn": "arn:aws:bedrock:eu-west-1::foundation-model/amazon.titan-embed-text-v1"
    }
  },
  "dataSource": {
    "type": "S3",
    "dataSourceConfiguration": {
      "s3Configuration": {
        "bucketArn": "arn:aws:s3:::ecm-digital-knowledge",
        "inclusionPrefixes": [
          "services/",
          "faq/",
          "meta/"
        ]
      }
    }
  },
  "storageConfiguration": {
    "type": "VECTOR",
    "vectorStorageConfiguration": {
      "vectorStoreConfiguration": {
        "type": "OPENSEARCH_SERVERLESS",
        "opensearchServerlessConfiguration": {
          "collectionArn": "arn:aws:opensearchserverless:eu-west-1:049164057970:collection/ecm-digital-kb"
        }
      }
    }
  },
  "tags": [
    {
      "key": "Project",
      "value": "ECM-Digital-Website"
    },
    {
      "key": "Environment",
      "value": "Production"
    },
    {
      "key": "Purpose",
      "value": "Services-Knowledge-Base"
    }
  ]
}
