{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ecm-digital.com/schemas/actionplan.schema.json",
  "title": "MarketingAgentActionPlan",
  "type": "object",
  "additionalProperties": false,
  "required": ["intent", "confidence", "reply"],
  "properties": {
    "intent": {
      "type": "string",
      "enum": ["blog", "calendar", "campaign", "tasks", "mix"]
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "blogDraft": {
      "type": "object",
      "additionalProperties": false,
      "required": ["language", "title", "slug"],
      "properties": {
        "language": { "type": "string", "enum": ["pl", "en"] },
        "title": { "type": "string", "minLength": 5 },
        "slug": { "type": "string", "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$" },
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true,
          "maxItems": 10
        },
        "excerpt": { "type": "string" },
        "sections": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 12
        },
        "seo": {
          "type": "object",
          "additionalProperties": false,
          "required": ["title", "description"],
          "properties": {
            "title": { "type": "string", "minLength": 10, "maxLength": 65 },
            "description": { "type": "string", "minLength": 50, "maxLength": 170 },
            "ogImage": { "type": "string" }
          }
        },
        "publishMode": { "type": "string", "enum": ["draft", "auto"] }
      }
    },
    "linearTasks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["title", "teamKey"],
        "properties": {
          "title": { "type": "string", "minLength": 3 },
          "description": { "type": "string" },
          "teamKey": { "type": "string" },
          "labels": { "type": "array", "items": { "type": "string" }, "uniqueItems": true },
          "priority": { "type": "integer", "minimum": 0, "maximum": 3 },
          "estimate": { "type": "number", "minimum": 0 },
          "dueDate": { "type": "string", "format": "date" }
        }
      }
    },
    "seoPack": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "description", "slug"],
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "slug": { "type": "string", "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$" },
        "tags": { "type": "array", "items": { "type": "string" }, "uniqueItems": true }
      }
    },
    "calendar": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["date", "title"],
        "properties": {
          "date": { "type": "string", "format": "date" },
          "title": { "type": "string" },
          "channel": { "type": "string", "enum": ["blog", "linkedin", "instagram", "facebook", "newsletter"] }
        }
      }
    },
    "reply": { "type": "string", "minLength": 3 }
  }
}
